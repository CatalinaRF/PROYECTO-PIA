
@{
    ViewBag.Title = "AgregarCliente";
}
<link rel="stylesheet" href="~/Content/Styles/cliente.css">

<h2>Agregar Cliente</h2>

<div class="container caja1">
    <div class="formAgregarCliente card mt-5">
        <h1 class="mb-5 d-flex justify-content-center">NUEVO CLIENTE</h1>
        <div class="row align-items-center d-flex justify-content-center mb-3">
            <div class="iconform col-1 text-center">
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="col-5">
                <input type="text" placeholder="Nombre" class="form-control" />
            </div>
        </div>
        <div class="row align-items-center d-flex justify-content-center mb-3">
            <div class="iconform col-1 text-center">
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="col-5">
                <input type="text" placeholder="Apellido" class="form-control" />
            </div>
        </div>
        <div class="row align-items-center d-flex justify-content-center mb-3">
            <div class="iconform col-1 text-center">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
            </div>
            <div class="col-5">
                <input type="text" placeholder="Direccion" class="form-control" />
            </div>
        </div>
        <div class="row align-items-center d-flex justify-content-center mb-3">
            <div class="iconform col-1 text-center">
                <i class="fa fa-phone" aria-hidden="true"></i>
            </div>
            <div class="col-5">
                <input type="number" placeholder="Telefono" class="form-control" />
            </div>
        </div>
        <div class="row align-items-center d-flex justify-content-center mb-3">
            <div class="iconform col-1 text-center">
                <i class="fa fa-map" aria-hidden="true"></i>
            </div>
            <div class="col-5">
                <input type="text" placeholder="Ciudad" class="form-control" />
            </div>
        </div>
        <div class="row align-items-center d-flex justify-content-end mt-3">
            <button class="btnform btn btn-danger" onclick="location.href='@Url.Action("Cliente", "Home")'">Cancelar</button>
            <button class="btnform btn btn-success">Guardar</button>
        </div>
    </div>
</div>

