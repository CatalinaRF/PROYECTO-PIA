
@{
    ViewBag.Title = "Producto";
}

<link rel="stylesheet" href="~/Content/Styles/producto.css">

<h2>Producto</h2>

<div class="container">
    <div class="OpcionesProducto mb-5 d-flex justify-content-between">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-success btnopc1 active">
                <input type="radio" name="options" id="opcTablaP" autocomplete="off" checked> Datos
            </label>
            <label class="btn btn-success btnopc2">
                <input type="radio" name="options" id="opcGraficoP" autocomplete="off"> Estadisticas
            </label>
        </div>
        <div class="btnAgregarProductodiv">
            <button class="btnTablaP btn btn-success" onclick="location.href='@Url.Action("AgregarProducto", "Home")'">Agregar</button>
        </div>
    </div>

    <div class="tablaProductos">
        <table class="table table-striped" id="myTableProducts">
            <thead>
                <tr class="bg-success">
                    <th scope="col">#</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio Compra</th>
                    <th scope="col">Precio Venta</th>
                    <th scope="col">Proveedor</th>
                    <th scope="col">Opcion</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>13</td>
                    <td>$234224</td>
                    <td>$240000</td>
                    <td>Proveedor1</td>
                    <td>
                        <button class="btnTablaP btn btn-info">Actualizar</button>
                        <button class="btnTablaP btn btn-danger">Eliminar</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>12</td>
                    <td>$87654</td>
                    <td>$88000</td>
                    <td>Proveedor2</td>
                    <td>
                        <button class="btnTablaP btn btn-info">Actualizar</button>
                        <button class="btnTablaP btn btn-danger">Eliminar</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>the Bird</td>
                    <td>21</td>
                    <td>$17263</td>
                    <td>$18000</td>
                    <td>Proveedor1</td>
                    <td>
                        <button class="btnTablaP btn btn-info">Actualizar</button>
                        <button class="btnTablaP btn btn-danger">Eliminar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="GraficoProductos" id="GraficoProductos">
    </div>
</div>

<script src="~/Scripts/Script/producto.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>